    <script>
        document.addEventListener('DOMContentLoaded', ()=>{
            const rem = localStorage.getItem('remember');
            if (rem) {
                try {
                    const obj = JSON.parse(rem);
                    if (obj.username) document.getElementById('username').value = obj.username;
                    if (obj.password) document.getElementById('password').value = obj.password;
                    document.getElementById('remember').checked = true;
                } catch(e){ }
            }

            // N·∫øu v·ª´a ƒëƒÉng k√Ω th√¨ t·ª± ƒëi·ªÅn username/password v√† hi·ªÉn th·ªã th√¥ng b√°o
            const last = localStorage.getItem('lastRegistered');
            if (last) {
                try {
                    const obj = JSON.parse(last);
                    if (obj.username) document.getElementById('username').value = obj.username;
                    if (obj.password) document.getElementById('password').value = obj.password;
                    const successDiv = document.getElementById('successMessage');
                    successDiv.textContent = '‚úÖ T√†i kho·∫£n m·ªõi ƒë√£ t·∫°o. Th√¥ng tin ƒë√£ ƒë∆∞·ª£c ƒëi·ªÅn s·∫µn.';
                    successDiv.style.display = 'block';
                } catch(e){}
                localStorage.removeItem('lastRegistered');
            }

            const showPass = document.getElementById('showPass');
            if (showPass) showPass.addEventListener('change', (e)=>{
                const p = document.getElementById('password');
                p.type = e.target.checked ? 'text' : 'password';
            });
        });

        function handleLogin(event) {
            event.preventDefault();
            
            const username = document.getElementById('username').value.trim();
            const password = document.getElementById('password').value;
            const rememberChecked = document.getElementById('remember').checked;
            const errorDiv = document.getElementById('errorMessage');
            const successDiv = document.getElementById('successMessage');
            
            errorDiv.style.display = 'none';
            successDiv.style.display = 'none';
            
            if (username === '' || password === '') {
                errorDiv.textContent = '‚ùå Vui l√≤ng nh·∫≠p t√™n ƒëƒÉng nh·∫≠p v√† m·∫≠t kh·∫©u!';
                errorDiv.style.display = 'block';
                return;
            }
            
            if (password.length < 6) {
                errorDiv.textContent = '‚ùå M·∫≠t kh·∫©u ph·∫£i c√≥ √≠t nh·∫•t 6 k√Ω t·ª±!';
                errorDiv.style.display = 'block';
                return;
            }
            
            // Ki·ªÉm tra t√†i kho·∫£n l∆∞u trong localStorage
            let loggedIn = false;
            try {
                const users = JSON.parse(localStorage.getItem('users') || '{}');
                if (users[username] && users[username].password === password) { loggedIn = true; }
            } catch (e) { /* ignore */ }

            if (!loggedIn && username === 'thang' && password === 'thang2006') { loggedIn = true; }

            if (loggedIn) {
                // remember
                try {
                    if (rememberChecked) {
                        localStorage.setItem('remember', JSON.stringify({ username, password }));
                    } else {
                        localStorage.removeItem('remember');
                    }
                } catch(e){ }

                successDiv.textContent = '‚úÖ ƒêƒÉng nh·∫≠p th√†nh c√¥ng! ƒêang chuy·ªÉn h∆∞·ªõng...';
                successDiv.style.display = 'block';
                setTimeout(() => {
                    window.location.href = 'Gi·ªõi Thi·ªáu B·∫£n Th√¢n.html';
                }, 1500);
            } else {
                errorDiv.textContent = '‚ùå T√™n ƒëƒÉng nh·∫≠p ho·∫∑c m·∫≠t kh·∫©u kh√¥ng ch√≠nh x√°c!';
                errorDiv.style.display = 'block';
            }
        }
        console.log('Demo account: thang / thang2006');
    </script>
